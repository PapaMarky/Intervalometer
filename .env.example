# Camera Control Server Configuration

# Server settings
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Camera settings
CAMERA_IP=192.168.12.98
CAMERA_PORT=443

# Power management settings (Raspberry Pi)
POWER_MONITORING_ENABLED=true
THERMAL_WARNING_THRESHOLD=70
BATTERY_LOW_THRESHOLD=20

# WebSocket settings
WS_HEARTBEAT_INTERVAL=30000
WS_STATUS_BROADCAST_INTERVAL=10000

# Field operation settings
RECONNECT_MAX_ATTEMPTS=10
RECONNECT_BASE_DELAY=5000
CONNECTION_TIMEOUT=10000